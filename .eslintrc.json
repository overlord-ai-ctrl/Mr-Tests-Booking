{
  "env": {
    "node": true,
    "es2021": true,
    "browser": true
  },
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-console": "off",
    "prefer-const": "warn"
  },
  "globals": {
    "process": "readonly",
    "Buffer": "readonly",
    "__dirname": "readonly",
    "__filename": "readonly",
    "global": "readonly",
    "window": "readonly",
    "document": "readonly",
    "localStorage": "readonly",
    "sessionStorage": "readonly",
    "fetch": "readonly",
    "AbortController": "readonly",
    "alert": "readonly",
    "confirm": "readonly",
    "setTimeout": "readonly",
    "clearTimeout": "readonly",
    "setInterval": "readonly",
    "clearInterval": "readonly",
    "URL": "readonly",
    "URLSearchParams": "readonly"
  }
}
